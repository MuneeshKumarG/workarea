<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinearGaugeTestbed.Page2"
             xmlns:gauge="http://schemas.syncfusion.com/maui"
             xmlns:local="clr-namespace:LinearGaugeTestbed"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <VerticalStackLayout>
        <Button Text="Orientation" x:Name="orientation"/>
        <Grid HeightRequest="500">
            <gauge:SfLinearGauge x:Name="gauge"  VerticalOptions="Center" HorizontalOptions="Center" >
                <gauge:SfLinearGauge.Ranges>
                    <gauge:LinearRange MidWidth="5" StartValue="0" EndValue="50" StartWidth="50" EndWidth="50"/>
                </gauge:SfLinearGauge.Ranges>
            </gauge:SfLinearGauge>
        </Grid>
       
    </VerticalStackLayout>
</ContentPage>
