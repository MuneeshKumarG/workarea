             BackgroundColor="{DynamicResource SecondaryColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Margin="15">
            <gauge:SfLinearGauge x:Name="gauge" ShowLine="False"
                                 HorizontalOptions="Center" VerticalOptions="Center"
                                 Maximum="10"
                          Interval="2"
                          MinorTicksPerInterval="3">
                <gauge:SfLinearGauge.MajorTickStyle>
                    <gauge:LinearTickStyle Length="15"/>
                </gauge:SfLinearGauge.MajorTickStyle>
                <gauge:SfLinearGauge.MinorTickStyle>
                    <gauge:LinearTickStyle Length="10"/>
                </gauge:SfLinearGauge.MinorTickStyle>
                <gauge:SfLinearGauge.LineStyle>
                    <gauge:LinearLineStyle Thickness="30"/>
                </gauge:SfLinearGauge.LineStyle>
                <gauge:SfLinearGauge.Ranges>
                    <gauge:LinearRange x:Name="range" EndValue="4"
                                        Fill="Red"
                                        StartWidth="30"
                                        EndWidth="30"
                                        RangePosition="Cross"/>
                    <gauge:LinearRange StartValue="4"
                                        EndValue="8"
                                        Fill="Yellow"
                                        StartWidth="30"
                                        EndWidth="30"
                                        RangePosition="Cross" />
                    <gauge:LinearRange StartValue="8"
                                        EndValue="10"
                                        Fill="Green"
                                        StartWidth="30"
                                        EndWidth="30"
                                        RangePosition="Cross" />

                </gauge:SfLinearGauge.Ranges>
                <gauge:SfLinearGauge.BarPointers>
                    <gauge:BarPointer x:Name="barPointer" Value="5"
                                  PointerSize="12"
                                  Fill="Black"/>
                </gauge:SfLinearGauge.BarPointers>
                <gauge:SfLinearGauge.MarkerPointers>
                    <gauge:ShapePointer x:Name="shapePointer"  Value="7" />

                    <gauge:ContentPointer x:Name="contentPointer" Value="5" >
                       

                    </gauge:ContentPointer>
                </gauge:SfLinearGauge.MarkerPointers>
            </gauge:SfLinearGauge>

           
