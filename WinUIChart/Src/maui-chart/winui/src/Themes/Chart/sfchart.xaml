    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Syncfusion.Chart.WinUI/Themes/themeresources.xaml"/>
        <ResourceDictionary Source="ms-appx:///Syncfusion.Core.WinUI/Themes/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="SyncfusionWinUIChartStyle" TargetType="local:WinUIChart">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:WinUIChart">
                    <Grid>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                  Background="{TemplateBinding Background}" Margin="{TemplateBinding Margin}">
                            <Grid Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter x:Name="SyncfusionChartHeader" Content="{TemplateBinding Header}" 
                                                      Foreground="{ThemeResource SyncfusionChartHeaderForeground}" 
                                                      HorizontalAlignment="{TemplateBinding HorizontalHeaderAlignment}" 
                                                      VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}" 
                                                      Margin="0,0,0,5" FontFamily="{ThemeResource SyncfusionControlThemeFontFamily}"
                                                      FontSize="{ThemeResource SyncfusionBodyLargeFontSize}" Background="AliceBlue"/>
                                
                                <local:ChartDockPanel x:Name="SyncfusionChartDockPanel" LastChildFill="False" Grid.Row="1">
                                    <Rectangle Height="25" Width="300" Fill="Aqua" local:ChartDockPanel.Dock="Top" />
                                    <local:ChartDockPanel.RootElement>
                                        <local:ChartRootPanel x:Name="SyncfusionChartRootPanel" Background="Orange">
                                            <Canvas x:Name="SyncfusionChartBottomAdorningCanvas" local:ChartRootPanel.MeasurePriorityIndex="1"/>
                                            <Grid x:Name="SyncfusionChartInternalCanvas" 
                                                   local:ChartRootPanel.MeasurePriorityIndex="1"  >
                                                <Canvas x:Name="SyncfusionChartGridLinesPanel" />
                                                <Border>
                                                    <Grid x:Name="SyncfusionChartSeriesPresenter" />
                                                </Border>
                                            </Grid>
                                        </local:ChartRootPanel>
                                    </local:ChartDockPanel.RootElement>
                                </local:ChartDockPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource SyncfusionWinUIChartStyle}" TargetType="local:WinUIChart"></Style>
    
    <Style x:Key="SyncfusionChartStyle" TargetType="local:SfChart">
