                                        <local:ChartRootPanel x:Name="SyncfusionChartRootPanel">
                                            <Canvas x:Name="SyncfusionChartBottomAdorningCanvas" local:ChartRootPanel.MeasurePriorityIndex="1"/>
                                            <Grid x:Name="SyncfusionChartInternalCanvas" Background="{TemplateBinding PlotAreaBackground}" local:ChartRootPanel.MeasurePriorityIndex="1" 
                                                  Margin="{TemplateBinding AxisThickness}">
                                                <Canvas x:Name="SyncfusionChartGridLinesPanel" />
                                                <Border BorderBrush="{TemplateBinding PlotAreaBorderBrush}"  BorderThickness="{TemplateBinding PlotAreaBorderThickness}">
                                                    <Grid x:Name="SyncfusionChartSeriesPresenter" />
                                                </Border>
                                            </Grid>
                                            <Canvas x:Name="SyncfusionChartAxisPanel" local:ChartRootPanel.MeasurePriorityIndex="0"></Canvas>
                                            <Canvas x:Name="SyncfusionChartSeriesAnnotationCanvas" local:ChartRootPanel.MeasurePriorityIndex="1"/>
                                            <Canvas x:Name="SyncfusionChartAnnotationCanvas" local:ChartRootPanel.MeasurePriorityIndex="1"/>
                                            <Canvas x:Name="SyncfusionChartAdorningCanvas" local:ChartRootPanel.MeasurePriorityIndex="1"></Canvas>
                                            <Canvas x:Name="SyncfusionChartToolkitCanvas" local:ChartRootPanel.MeasurePriorityIndex="1"/>
                                        </local:ChartRootPanel>
                                    </local:ChartDockPanel.RootElement>
                                </local:ChartDockPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

